// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  ADMIN
  USER
}

enum State {
  SOON
  IN_PROGRESS
  COMPLETED
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  role     Role      @default(USER)
  car      Car[]
  trips    UserTrips

  messages Message[]
}

model Car {
  id      Int    @id @default(autoincrement())
  nbPlate String @unique
  color   String
  model   String
  user    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique
}

model Message {
  id      Int      @id @default(autoincrement())
  content String
  date    DateTime
  user    User     @relation(fields: [userid], references: [id], onDelete: NoAction, onUpdate: NoAction)
  userid  Int      @unique
  trajet  Trajet[]
}

model Trip {
  id        Int       @id @default(autoincrement())
  duree     String
  etape     String?
  hour      DateTime
  passenger UserTrips
  driver    User
  adress    Adress[]
  state     State
  message   Message   @relation(fields: [messageid], references: [id])
  messageid Int       @unique
}

model Adress {
  id       Int     @id @default(autoincrement())
  city     String
  zipCode  Int
  street   String
  long     String
  lat      String
  start    Boolean
  trajet   Trajet  @relation(fields: [trajetid], references: [id])
  trajetid Int     @unique
}

model UserTrips {
  user   User @relation(fields: [userid], references: [id])
  userid Int  @unique
  trip   Trip @relation(fields: [tripid], references: [id])
  tripid Int  @unique
}
